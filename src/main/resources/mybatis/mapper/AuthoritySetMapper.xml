<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tcb.dao.IAuthoritySetDao" >

    <resultMap id="authoritySetPojoResultMap" type="com.tcb.pojo.AuthoritySetPojo">
        <id column="set_id" property="userId" jdbcType="INTEGER" />
        <result column="user_type" property="userCode" jdbcType="VARCHAR"/>
        <result column="authority_flag" property="userPassword" jdbcType="VARCHAR"/>
        <result column="opt_user_id" property="optUserId" jdbcType="INTEGER"/>
        <result column="opt_user_name" property="optUserName" jdbcType="VARCHAR"/>
        <result column="opt_time" property="optTime" jdbcType="TIMESTAMP"/>
        <association property="pagePojo" column="page_id" javaType="com.tcb.pojo.PagePojo"
                     resultMap="com.tcb.dao.IPageDao.pagePojoResultMap"></association>
    </resultMap>

    <!-- 是否存在页面权限 -->
    <select id="haveAuthority" resultType="java.lang.Integer">
        SELECT
            COUNT(DISTINCT tsas.set_id)
        FROM
            tbl_sys_authority_set tsas
        WHERE
            tsas.page_code = #{authoritySetPojo.pagePojo.pageCode}
        AND tsas.user_type = #{authoritySetPojo.userType}
    </select>

    <!-- 新增权限设置信息 -->
    <insert id="insertAuthoritySet" parameterType="com.tcb.pojo.AuthoritySetPojo">
        INSERT INTO tbl_sys_authority_set(
            user_type,
            page_code,
            authority_flag,
            opt_user
        )VALUES
        <foreach collection="authoritySetPojoList" item="item" index="index" separator=",">
            (
            #{item.userType},
            #{item.pagePojo.pageCode},
            #{item.authorityFlag},
            #{item.optUserId}
            )
        </foreach>
    </insert>

    <!-- 更新权限设置信息 -->
    <update id="updateAuthoritySet" parameterType="com.tcb.pojo.AuthoritySetPojo">
        UPDATE tbl_sys_authority_set
        SET authority_flag = #{authoritySetPojo.authorityFlag}
        WHERE set_id = #{authoritySetPojo.setId}
    </update>

    <!-- 删除权限设置信息 -->
    <delete id="deleteAuthoritySet">
        DELETE FROM tbl_sys_authority_set WHERE user_type = #{userType}
    </delete>

</mapper>